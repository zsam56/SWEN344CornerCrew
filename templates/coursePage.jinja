{% extends "base.jinja" %}
{% block body %}
    <div>
        <div class="titleDiv">
            {{section["course_name"]}}
        </div>
        <div class="centerDiv tableBorderColor">
            
            <table class="table">
                <thead>
                  <tr>
                    <th>Lock</th>
                    <th>Student</th>
                    <th>Grade</th>
                  </tr>
                </thead>
                
                <tbody>
                    {% for student_id in grades_comments %}
                        <tr class="collapsible-header">
                            <td>
                                {% if grades_comments[student_id]["grade"]["IS_LOCKED"] %}
                                    <img src="/static/icons/lock_icon.png" class="lock_img">
                                {%endif%}
                                {% if not grades_comments[student_id]["grade"]["IS_LOCKED"] %}
                                    <div class="lock_check">
                                        {# <input name=lock_check type=checkbox> #}
                                        <form action="/lock_grades" method="post">
                                            {{form.student_id(value=student_id)}}
                                            {{form.section_id(value=section['ID'])}}
                                            <div class="lock_button">
                                                <input name=Lock type=submit value=Lock>
                                            </div>
                                        </form>
                                    </div>
                                {%endif%}
                            </td>
                            <td>
                                <strong>{{ grades_comments[student_id]["student"]["FIRSTNAME"] }}
                                 {{ grades_comments[student_id]["student"]["LASTNAME"] }}</strong>
                            </td>
                            <td>
                                <strong>{{ grades_comments[student_id]["grade"]["VALUE"] }}</strong>
                                {% if not grades_comments[student_id]["grade"]["IS_LOCKED"] %}
                                    <form action="/save_grade" method="post">
                                        {# <select name="save_grade" class="select-grade" selected="C">
                                            <option value="A">A</option>
                                            <option value="B">B</option>
                                            <option value="C">C</option>
                                            <option value="D">D</option>
                                            <option value="F">F</option>
                                        </select> #}
                                        {{save_form.new_grade}}
                                        {{save_form.student_id(value=student_id)}}
                                        {{save_form.section_id(value=section['ID'])}}
                                        <div class="save_button">
                                            <input name=Save type=submit value=Save>
                                        </div>
                                    </form>
                                {%endif%}
                            </td>
                        </tr>
                        <tr class="collapsible-content">
                            <td colspan="2">
                                <p><strong>Comments</strong></p>
                                <br>
                                {% for c in grades_comments[student_id]["comments"] %}
                                <p>
                                    {{ c["USER"]["first_name"] }} {{ c["USER"]["last_name"] }} ({{ c["USER"]["role"] }}) - Posted {{ c["created_time"] }}
                                    <br>
                                    {{ c["comment"] }}
                                </p>
                                {% endfor %}
                            <input type="text" style="width: 80%" placeholder="Write a comment">
                            <button style="float: right">Submit</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
        </div>
    </div>
{% endblock %}
