{% extends "base.jinja" %}
{% block body %}
    <div>
        <div class="titleDiv">
            Courses
        </div>
        <div class="centerDiv tableBorderColor">
            <table class="table">
            <thead>
              <tr>
                <th>Course</th>
                <th>Grades</th>
              </tr>
            </thead>
            <tbody>
                {% for s in section_list %}
                    <tr>
                        <td>
                            <a href="/course/{{s['id']}}">
                            {{ s['course_name'] }}
                            </br>
                            {{ s['id'] }}
                            </a>
                        </td>
                        <td>
                            {{ s['num_graded'] }}/{{ s['num_students'] }}
                            <br/>
                            graded
                        </td>
                    </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
    </div>
{% endblock %}
