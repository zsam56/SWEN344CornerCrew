{% extends "base.jinja" %}
{% block body %}
    <div>
        <div class="titleDiv">
            Courses
        </div>
        <div class="centerDiv tableBorderColor">
            <table class="table">
            <thead>
              <tr>
                <th>Course</th>
                <th>Grade</th>
              </tr>
            </thead>
            <tbody>
                {% for s in section_list %}
                    {% if student %}
                    <tr class="collapsible-header">
                    {% else %}
                    <tr>
                    {% endif %}
                        <td>
                            {% if not student %}
                            <a href="/course/{{s['ID']}}">
                            {% endif %}
                            {{ s['COURSE_ID'] }}
                            </br>
                            {{ s['CLASSROOM_ID'] }}
                            {% if not student %}
                            </a>
                            {% endif %}
                        </td>
                        <td>
                            {% if student %}
                            {{ s['grade']['VALUE'] }}
                            {% else %}
                            {{ s['num_graded'] }}/{{ s['MAX_STUDENTS'] }}
                            <br>
                            graded
                            {% endif %}
                        </td>
                    </tr>
                    {% if student %}
                    <tr class="collapsible-content">
                        <td colspan="2">
                            <p><strong>Comments</strong></p>
                            {% for c in s["comments"] %}
                            <p>
                                {{ c["USER_ID"]["FIRSTNAME"] }} {{ c["USER_ID"]["LASTNAME"] }} ({{ c["USER_ID"]["ROLE"] }}) - Posted {{ c["created_time"] }}
                                <br>
                                {{ c["comment"] }}
                            </p>
                            {% endfor %}
                            <input type="text" style="width: 80%" placeholder="Write a comment">
                            <button style="float: right">Submit</button>
                        </td>
                    </tr>
                    {% endif %}
            {% endfor %}
            </tbody>
          </table>
        </div>
    </div>
{% endblock %}